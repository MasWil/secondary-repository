<html>
<head>
<script>
function rotatePos() {
  document.getElementById('lionKing').style.transform="rotate(45deg)";
  
}
function rotateNeg() {
  document.getElementById('lionKing').style.transform="rotate(-45deg)";
  
}
</script>

</head>

<body>
<img src="https://cdn2en.mundo.com/fotos/201505/Animals-61-600x400.jpg" id="lionKing" onmouseover="rotatePos()" width="30%" onmouseout="rotateNeg()">

</body>

</html>
